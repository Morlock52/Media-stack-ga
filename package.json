{
    "name": "media-stack-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "control-server",
        "docs-site"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev -w control-server\" \"npm run dev -w docs-site\"",
        "build": "npm run build --workspaces",
        "test": "npm test --workspaces",
        "lint": "npm run lint --workspaces",
        "preview": "npm run preview -w docs-site",
        "prepare": "husky install"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "^3.7.4",
        "@types/react": "18.3.27",
        "@types/react-dom": "18.3.7"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{md,json}": [
            "prettier --write"
        ]
    },
    "overrides": {
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "@types/react": "18.3.27",
        "@types/react-dom": "18.3.7"
    }
}
